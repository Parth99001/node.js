<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      body{
          margin: auto;
          text-align: center;
      }
      .container{
          justify-items: center;
          
      }
  </style>
  </head>
  <body>
  <div class="container m-5 p-5 bg-black text-white mx-auto">
    <h2>Todo App</h2>
    <table border="" class="p-5 ">
      <form action="/addData" method="post">
          <tr>
              <td>Name</td>
              <td><input placeholder="Enter Any Task" name="userName" type="text"></td>
          </tr>
          <tr><td></td></tr>
          <tr><td></td></tr>
          <tr>
            
              <td><button class="btn btn-primary">Submit</button></td>
          </tr>
      </form>
  </table>
  <h1 style="margin-top: 50px;">User Record</h1>
  <table border="">
      <thead>
        <tr>
          <th>Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% records.forEach((element,index)=>{ %>
        <tr>
          <td><%= element %></td>
          <td>
            <a href="/edit/<%= index %>"><button class="btn btn-primary">Edit</button></a>
            <a href="/delete/<%= index %>"><button class="btn btn-danger">Delete</button></a>
          </td>
        </tr>

        <% }) %>
      </tbody>
    </table>

  </div>
   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>